<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="BuddyConnect.TemplateListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    
    xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    
    xmlns:language="clr-namespace:BuddyConect.Resources.Languages"
    xmlns:local="clr-namespace:BuddyConnect"
    
    Title="{x:Static language:AppResources.Settings}"
    BackgroundColor="{DynamicResource PageBackgroundColor}"
    >

    <!--<ContentPage.ToolbarItems>
        <ToolbarItem x:Name="ti_themeSetting" Clicked="OnThemeToolbarItemClicked" />
    </ContentPage.ToolbarItems>-->
    
    <ScrollView>
        <Grid BackgroundColor="{DynamicResource TransparentBackgroundColor}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>
            <ActivityIndicator x:Name="activity" HorizontalOptions="Center" VerticalOptions="Center"
                               HeightRequest="100" WidthRequest="100" IsRunning="true" />
        </Grid>
        
    </ScrollView>
</ContentPage>
