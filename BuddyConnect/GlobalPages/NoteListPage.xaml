<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BuddyConnect.NoteListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:language="clr-namespace:BuddyConnect.Resources.Languages"
    xmlns:local="clr-namespace:BuddyConnect"
    xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="{x:Static language:AppResources.Notes}"
    BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ContentPage.ToolbarItems>
        <ToolbarItem
            Clicked="AddNote_Clicked"
            IconImageSource="{FontImage Glyph='+',
                                        Color=Black,
                                        Size=22}"
            Text="{x:Static language:AppResources.Add}" />
    </ContentPage.ToolbarItems>



    <!--  Display notes in a list  -->
    <ScrollView>
        <VerticalStackLayout
            Padding="5"
            Spacing="25" VerticalOptions="Start">
            <TableView Intent="Menu">
                <TableRoot x:Name="noteTable" />
            </TableView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>