    <Color x:Key="PageBackgroundColor">White</Color>
    <Color x:Key="NavigationBarColor">WhiteSmoke</Color>

    <Color x:Key="MenuFlyoutColor">PeachPuff</Color>

    <Color x:Key="PrimaryColor">Black</Color>
    <Color x:Key="SecondaryColor">WhiteSmoke</Color>

    <Color x:Key="PrimaryTextColor">Black</Color>
    <Color x:Key="SecondaryTextColor">DarkGray</Color>
    <Color x:Key="InputBackgroundColor">AntiqueWhite</Color>

    <Color x:Key="PrimaryButtonBackgroundColor">#512BD4</Color>
    <Color x:Key="PrimaryButtonTextColor">White</Color>
    <Color x:Key="ButtonAlertBackgroundColor">Salmon</Color>

    <Color x:Key="TransparentColor">Transparent</Color>

